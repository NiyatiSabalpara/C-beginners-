#include<iostream>
using namespace std;
//Reverse of Four digit number
int main(){
    int n1, a=0, r;
    cout<<"Enter the four digit number:: "<<endl;
    cin>>n1;
    r=n1%10;
    a=a+r;
    n1=n1/10;
    r=n1%10;
    a=(a*10)+r;
    n1=n1/10;
    r=n1%10;
    a=(a*10)+r;
    n1=n1/10;
    r=n1%10;
    a=(a*10)+r;
    cout<<"The reversed number is:: "<<a;
    return 0;
}
