#include<iostream>
using namespace std;
int main(){
    int y;
    cout<<"Enter the year to be checked:: "<<endl;
    cin>>y;
    if(y%4==0){
        if (y%100==0){
            if(y%400==0)
               cout<<"It is a Leap year.";
            else
                cout<<"The year is not a leap year.";
               }
        else
            cout<<"The year is a leap year.";
    }
    else
        cout<<"The year is not a leap year.";
    return 0;
}
